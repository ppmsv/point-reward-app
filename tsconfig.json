{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["@types/node", "nuxt"],
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}